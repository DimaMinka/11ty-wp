---
pagination:
  data: pages
  size: 1
  alias: wpPage
permalink: /{{ wpPage.slug }}/index.html
---

{% extends "layouts/base.njk" %}

{% set title = wpPage.title.rendered %}

{% block pageTitle %}
	<h1 class="entry__title">{{ title | safe }}</h1>
{% endblock %}

{% block content %}
	{{ wpPage.content.rendered | safe }}
{% endblock %}
